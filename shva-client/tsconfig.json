{
  "include": [
    "**/*",
//    "**/.server/**/*",
//    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["app/utils/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/types/*": ["app/types/*"],
      "@/types/Router": [".react-router/types/app/+types/root"],
      "@/pages/*": ["app/pages/*"],
      "@/contexts/*": ["app/contexts/*"],
      "@/components/*": ["app/components/*"],
      "@/*": [
        "app/*"
      ]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
